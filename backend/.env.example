# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Alibaba Cloud Configuration
ALIBABA_ACCESS_KEY_ID=your_alibaba_access_key_id
ALIBABA_ACCESS_KEY_SECRET=your_alibaba_access_key_secret
ALIBABA_REGION=us-west-1
ALIBABA_ACCOUNT_ID=your_account_id

# Alibaba Cloud PAI EAS Configuration
PAI_EAS_SERVICE_URL=https://your-service-id.us-west-1.pai-eas.aliyuncs.com
PAI_EAS_SERVICE_TOKEN=your_pai_eas_token
PAI_MODEL_NAME=Qwen-7B-Chat
PAI_TIMEOUT=30000

# Alibaba Cloud Function Compute (Optional)
FC_SERVICE_NAME=sirfa-trading-agent
FC_FUNCTION_NAME=trading-decision-engine
FC_ENDPOINT=https://your-account-id.us-west-1.fc.aliyuncs.com

# Alpaca Trading API
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# For live trading, use: https://api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Yahoo Finance API (if using RapidAPI)
YAHOO_FINANCE_API_KEY=your_rapidapi_key
YAHOO_FINANCE_HOST=yahoo-finance15.p.rapidapi.com

# News Plugin API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key
NEWS_API_KEY=your_news_api_key
POLYGON_API_KEY=your_polygon_key

# Database Configuration (if using RDS)
DB_HOST=your_rds_endpoint
DB_PORT=3306
DB_NAME=sirfa_finance
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration (for caching)
REDIS_URL=redis://your_redis_endpoint:6379

# WebSocket Configuration
WS_PORT=3002

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Logging
LOG_LEVEL=info

# Trading Configuration
MAX_POSITION_SIZE=10000
RISK_TOLERANCE=0.02
TRADING_ENABLED=true