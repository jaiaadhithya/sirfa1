{
  "name": "sirfa-agent-finance-backend",
  "version": "1.0.0",
  "description": "Backend API for SIRFA Agent Finance - Alibaba Cloud AI Hackathon",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "health-check": "node healthcheck.js",
    "migrate": "echo 'No migrations required'",
    "seed": "echo 'No seeding required'",
    "clean": "rm -rf node_modules logs/*.log",
    "clean:windows": "rmdir /s /q node_modules && del /q logs\\*.log",
    "deploy:heroku": "git push heroku main",
    "deploy:railway": "railway deploy",
    "deploy:render": "echo 'Deploy via Render dashboard'",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log"
  },
