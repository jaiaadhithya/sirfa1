# SIRFA Agent Finance - Docker Environment Configuration
# This file is used for Docker container deployments
# Values will be overridden by docker-compose.yml or Kubernetes manifests

# Application Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (will be overridden by container orchestration)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=sirfa_finance
DB_USER=sirfa_admin
DB_PASSWORD=changeme
DB_SSL=false
DB_CONNECTION_LIMIT=10

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# Alibaba Cloud Configuration (will be injected via secrets)
ALIBABA_CLOUD_ACCESS_KEY_ID=
ALIBABA_CLOUD_ACCESS_KEY_SECRET=
ALIBABA_CLOUD_REGION=ap-southeast-1
ALIBABA_CLOUD_ACCOUNT_ID=

# Function Compute Configuration
FC_SERVICE_NAME=sirfa-trading-service
FC_FUNCTION_NAME=trading-decision-engine
FC_API_VERSION=2016-08-15

# OSS Configuration
OSS_REGION=ap-southeast-1
OSS_BUCKET=sirfa-app-storage

# Log Service Configuration
LOG_PROJECT=sirfa-app-logs
LOG_STORE=app-log-store
LOG_LEVEL=info

# Alpaca Trading Configuration (will be injected via secrets)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Yahoo Finance Configuration (will be injected via secrets)
YAHOO_FINANCE_API_KEY=
YAHOO_FINANCE_BASE_URL=https://yfapi.net

# Security Configuration (will be injected via secrets)
JWT_SECRET=
ENCRYPTION_KEY=
SESSION_SECRET=

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Trading Configuration
TRADING_ENABLED=true
MAX_POSITION_SIZE=10000
RISK_MANAGEMENT_ENABLED=true
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10

# AI Agent Configuration
AI_DECISION_TIMEOUT=30000
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_RETRIES=3

# News Feed Configuration
NEWS_REFRESH_INTERVAL=300000
NEWS_MAX_ARTICLES=100
NEWS_SENTIMENT_ENABLED=true

# Portfolio Configuration
PORTFOLIO_REFRESH_INTERVAL=30000
PORTFOLIO_CACHE_TTL=60

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# Performance Configuration
CLUSTER_MODE=false
WORKER_PROCESSES=1
MAX_MEMORY_USAGE=512

# Feature Flags
FEATURE_REAL_TRADING=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_TRADING=false
FEATURE_MOBILE_NOTIFICATIONS=true
FEATURE_DEBUG_MODE=false
FEATURE_MOCK_DATA=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false