# Production Environment Configuration for Alibaba Cloud ECS
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=production
PORT=3001
WS_PORT=8080
FRONTEND_URL=https://your-domain.com
FRONTEND_PORT=3000

# Alibaba Cloud Configuration
ALIBABA_ACCESS_KEY_ID=your_access_key_id
ALIBABA_ACCESS_KEY_SECRET=your_access_key_secret
ALIBABA_REGION=us-west-1

# Alibaba Cloud ASR (Automatic Speech Recognition)
ALIBABA_ASR_APP_KEY=your_asr_app_key

# Alibaba Cloud TTS (Text-to-Speech)
ALIBABA_TTS_APP_KEY=your_tts_app_key

# DashScope API (Alibaba's AI Platform)
DASHSCOPE_API_KEY=your_dashscope_api_key

# PAI EAS (Platform for AI - Elastic Algorithm Service)
PAI_EAS_ENDPOINT=https://your-pai-eas-endpoint.com
PAI_EAS_TOKEN=your_pai_eas_token

# Database Configuration (Alibaba Cloud RDS)
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/sirfa_db
# Alternative MySQL configuration
# DATABASE_URL=mysql://username:password@your-rds-endpoint:3306/sirfa_db

# Redis Configuration (Alibaba Cloud Redis)
REDIS_URL=redis://your-redis-endpoint:6379
# If Redis has password
# REDIS_URL=redis://:password@your-redis-endpoint:6379

# Trading API Keys
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# For live trading, use: https://api.alpaca.markets

# Market Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
NEWS_API_KEY=your_news_api_key

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_key_here

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Email Configuration (if using Alibaba Cloud DirectMail)
EMAIL_SERVICE=alibaba
EMAIL_HOST=smtpdm.aliyun.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your_email@your-domain.com
EMAIL_PASS=your_email_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Security Configuration
BCRYPT_ROUNDS=12
CSRF_SECRET=your_csrf_secret_key_here

# Feature Flags
ENABLE_VOICE_TRADING=true
ENABLE_AI_INSIGHTS=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_PORTFOLIO_ANALYTICS=true

# Third-party Integrations
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Development/Debug (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false