# SIRFA Agent Finance - Production Environment Configuration
# This file contains production environment variables
# DO NOT commit this file to version control with real values

# Application Configuration
NODE_ENV=production
PORT=3001
API_BASE_URL=https://your-domain.com/api
FRONTEND_URL=https://your-domain.com

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key-here
CORS_ORIGIN=https://your-domain.com

# Database Configuration (RDS MySQL)
DB_HOST=your-rds-endpoint.rds.ap-southeast-1.rds.aliyuncs.com
DB_PORT=3306
DB_NAME=sirfa_finance
DB_USER=sirfa_admin
DB_PASSWORD=your-secure-database-password
DB_SSL=true
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000

# Alibaba Cloud Configuration
ALIBABA_CLOUD_ACCESS_KEY_ID=your-access-key-id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your-access-key-secret
ALIBABA_CLOUD_REGION=ap-southeast-1
ALIBABA_CLOUD_ACCOUNT_ID=your-account-id

# PAI EAS Configuration (AI Model Service)
PAI_EAS_SERVICE_URL=https://your-service-id.ap-southeast-1.pai-eas.aliyuncs.com
PAI_EAS_SERVICE_TOKEN=your-pai-eas-token
PAI_MODEL_NAME=Qwen-7B-Chat
PAI_TIMEOUT=30000

# Function Compute Configuration (Optional)
FC_ENDPOINT=https://your-account-id.ap-southeast-1.fc.aliyuncs.com
FC_SERVICE_NAME=sirfa-trading-service
FC_FUNCTION_NAME=trading-decision-engine
FC_API_VERSION=2016-08-15

# OSS Configuration
OSS_REGION=ap-southeast-1
OSS_BUCKET=sirfa-app-storage-prod
OSS_ENDPOINT=https://oss-ap-southeast-1.aliyuncs.com
OSS_INTERNAL_ENDPOINT=https://oss-ap-southeast-1-internal.aliyuncs.com

# Log Service Configuration
LOG_PROJECT=sirfa-app-logs-prod
LOG_STORE=app-log-store
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_MAX_SIZE=100m

# Trading API Configuration
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# News Plugin API Keys
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
NEWS_API_KEY=your-news-api-key
POLYGON_API_KEY=your-polygon-key

# Yahoo Finance API (RapidAPI)
YAHOO_FINANCE_API_KEY=your-rapidapi-key
YAHOO_FINANCE_HOST=yahoo-finance15.p.rapidapi.com

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://your-redis-endpoint:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Trading Configuration
MAX_POSITION_SIZE=10000
RISK_TOLERANCE=0.02
TRADING_ENABLED=true
PAPER_TRADING=true

# Alpaca Trading Configuration
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live trading
ALPACA_DATA_URL=https://data.alpaca.markets
ALPACA_STREAM_URL=wss://stream.data.alpaca.markets

# Yahoo Finance Configuration
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
YAHOO_FINANCE_BASE_URL=https://yfapi.net
YAHOO_FINANCE_RATE_LIMIT=100  # requests per minute

# Redis Configuration (Optional - for caching)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600  # 1 hour default TTL

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000  # 30 seconds
WS_MAX_CONNECTIONS=1000

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
METRICS_ENABLED=true
METRICS_PORT=9090

# Trading Configuration
TRADING_ENABLED=true
MAX_POSITION_SIZE=10000  # USD
RISK_MANAGEMENT_ENABLED=true
STOP_LOSS_PERCENTAGE=5  # 5%
TAKE_PROFIT_PERCENTAGE=10  # 10%

# AI Agent Configuration
AI_DECISION_TIMEOUT=30000  # 30 seconds
AI_CONFIDENCE_THRESHOLD=0.7  # 70%
AI_MAX_RETRIES=3

# News Feed Configuration
NEWS_REFRESH_INTERVAL=300000  # 5 minutes
NEWS_MAX_ARTICLES=100
NEWS_SENTIMENT_ENABLED=true

# Portfolio Configuration
PORTFOLIO_REFRESH_INTERVAL=30000  # 30 seconds
PORTFOLIO_CACHE_TTL=60  # 1 minute

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/sirfa.crt
SSL_KEY_PATH=/etc/ssl/private/sirfa.key

# Performance Configuration
CLUSTER_MODE=true
WORKER_PROCESSES=0  # 0 = auto (number of CPU cores)
MAX_MEMORY_USAGE=512  # MB per worker

# Feature Flags
FEATURE_REAL_TRADING=false  # Set to true only when ready for live trading
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_TRADING=false
FEATURE_MOBILE_NOTIFICATIONS=true